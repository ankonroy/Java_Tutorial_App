<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="500" prefWidth="400" spacing="15" style="-fx-background-color: #f5f5f5;"
      xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.learnjavafx.SignUpController">
    <Label
        style="-fx-font-size: 24px; -fx-text-fill: #333;" text="Sign Up"
    />
    <VBox
        alignment="CENTER"
        prefWidth="300"
        spacing="10"
    >
        <VBox
            alignment="CENTER"
            prefWidth="250"
            spacing="5"
        >
            <Label
                maxWidth="250"
                prefWidth="250"
                text="Full name:"
            />
            <TextField
                fx:id="fullNameField"
                maxWidth="250"
                prefWidth="250"
            />
        </VBox>
        <VBox
            alignment="CENTER"
            prefWidth="250"
            spacing="5"
        >
            <Label
                maxWidth="250"
                prefWidth="250"
                text="Username:"
            />
            <TextField
                fx:id="usernameField"
                maxWidth="250"
                prefWidth="250"
            />
        </VBox>
        <VBox
            alignment="CENTER"
            prefWidth="250"
            spacing="5"
        >
            <Label
                maxWidth="250"
                prefWidth="250"
                text="Email:"
            />
            <TextField
                fx:id="emailField"
                maxWidth="250"
                prefWidth="250"
            />
        </VBox>
        <VBox
            alignment="CENTER"
            prefWidth="250"
            spacing="5"
        >
            <Label
                maxWidth="250"
                prefWidth="250"
                text="Password:"
            />
            <PasswordField
                fx:id="passwordField"
                maxWidth="250"
                prefWidth="250"
            />
        </VBox>
        <VBox
            alignment="CENTER"
            prefWidth="250"
            spacing="5"
        >
            <Label
                maxWidth="250"
                prefWidth="250"
                text="Confirm Password:"
            />
            <PasswordField
                fx:id="confirmPasswordField"
                maxWidth="250"
                prefWidth="250"
            />
        </VBox>
    </VBox>
    <Button
        fx:id="signUpButton"
        prefWidth="250"
        style="-fx-background-color: #6200ea; -fx-text-fill: white;"
        onAction="#onSignUpButtonClick"
        text="Sign Up"
    />
    <Hyperlink
        fx:id="backToLoginLink"
        style="-fx-text-fill: #6200ea;"
        text="Back to Login"
        onAction="#onBackToLoginLinkClick"
    />
</VBox>

