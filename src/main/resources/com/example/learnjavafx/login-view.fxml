<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox
    alignment="CENTER"
    prefHeight="300"
    prefWidth="400"
    spacing="15"
    style="-fx-background-color: #f5f5f5;"
    xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.example.learnjavafx.LoginController"
>
    <Label
        style="-fx-font-size: 24px; -fx-text-fill: #333;"
        text="Login"
    />
    <VBox
        alignment="CENTER"
        prefWidth="300"
        spacing="10"
    >
        <VBox
            alignment="CENTER"
            prefWidth="250"
            spacing="5"
        >
            <Label
                maxWidth="250"
                prefWidth="250"
                text="Username:"
            />
            <TextField
                fx:id="usernameField"
                maxWidth="250"
                prefWidth="250"
            />
        </VBox>
        <VBox
            alignment="CENTER"
            prefWidth="250"
            spacing="5"
        >
            <Label
                maxWidth="250"
                prefWidth="250"
                text="Password:"
            />
            <PasswordField
                fx:id="passwordField"
                maxWidth="250"
                prefWidth="250"
            />
        </VBox>
    </VBox>
    <Button
        fx:id="loginButton"
        prefWidth="250"
        style="-fx-background-color: #6200ea; -fx-text-fill: white;" text="Login" onAction="#onLoginButtonClick"
    />
    <Label
        text="Don't have an account?"
    />
    <Hyperlink
        fx:id="signUpLink"
        style="-fx-text-fill: #6200ea;" text="Sign Up"
        onAction="#onSignUpLinkClick"
    />
</VBox>
